<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBlue"
    android:layout_height="match_parent"

    tools:context=".Water">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="you have drunnk as follow"
    android:textSize="25dp"
    android:id="@+id/WaterTitle"
    android:layout_centerHorizontal="true"/>

    <me.itangqi.waveloadingview.WaveLoadingView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/WaterTitle"
        app:wlv_shapeType="circle"
        app:wlv_titleCenter="Center Title"
        app:wlv_round_rectangle="true"
        app:wlv_titleCenterColor="@android:color/white"
        app:wlv_titleCenterSize="24sp"
        android:layout_centerInParent="true"
        android:id="@+id/AmountOfWater"
        app:wlv_waveAmplitude="20"
        app:wlv_waveColor="@color/Ocean"/>

</RelativeLayout>
<RelativeLayout
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true">
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnaddwater"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_add_circle_black_24dp"/>
        <com.naylalabs.semiradialmenu.RadialMenuView
            android:id="@+id/radial_menu_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone" />
</RelativeLayout>
    </RelativeLayout>
