<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:padding="30dp"
    tools:context=".ForRequestUserInformation1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adfadsfsdf"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="About you"
            android:id="@+id/aihf"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/afadgadg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aihf"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Tell us about yourself and we will check how muxh /n water you need during the day"
            android:textColor="#ffffff" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/afadgadg">

            <ImageView
                android:id="@+id/WomanImage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/woman" />
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:id="@+id/ManImage"
                android:src="@drawable/man"/>
        </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/afadgadg">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="-2dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="170dp">

        <RadioButton
            android:id="@+id/WomanRadio"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Woman"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ManRadio"
            android:layout_width="100dp"
            android:layout_marginLeft="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Man"
            android:textColor="#ffffff" />
    </RadioGroup>
</RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adfadsfsdf"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
android:id="@+id/adgadsg"
            android:outlineAmbientShadowColor="#bebebe">
            <TableRow>
                <TextView
                    android:text="Name"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:layout_width="110dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="200dp"
                    android:textColor="#ffffff"
                    android:id="@+id/UserNameDialog"
                    android:textSize="13dp"
                    android:textAlignment="viewEnd"
                    android:paddingRight="40dp"
                    android:hint="Fill in Name"
                    android:textColorHint="#ffffff"
                    />

            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
            android:layout_below="@+id/adgadsg"
            android:id="@+id/adsfasdfadsf"
            android:layout_marginTop="8dp"
            android:outlineAmbientShadowColor="#bebebe">
            <TableRow>
                <TextView
                    android:text="Date of Birth"
                    android:textSize="15dp"
                    android:layout_width="110dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="200dp"
                    android:textColor="#ffffff"
                    android:id="@+id/DateOfBirth"
                    android:paddingRight="30dp"
                    android:text="Select Date of Birth"
                    android:textAlignment="viewEnd"
                    android:textSize="13dp"
                    />
            </TableRow>
        </TableLayout>



    </RelativeLayout>

    <info.hoang8f.widget.FButton
        app:shadowColor="@color/fbutton_color_asbestos"
        android:id="@+id/NextButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Next"
        android:textColor="#ffffff"
        android:drawableRight="@drawable/ic_navigate_next_black_24dp"
        android:textStyle="bold" />
</RelativeLayout>